<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customViews="clr-namespace:UploadApp.CustomViews"
             x:Class="UploadApp.Views.MainPage" Title="Главная"
             BindingContext="{Binding MainPageViewModel, Source={StaticResource VMLocator}}">

    
        <StackLayout>
            <customViews:CameraPreview  
                    x:Name="CameraPreview"           
                    BackgroundColor="Black"
                    HorizontalOptions="FillAndExpand"
                    Camera="Rear"                                         
                    Margin="0,0,0,0"
                    VerticalOptions="FillAndExpand"
                    Grid.Column="0" Grid.Row="0">
            </customViews:CameraPreview>
            <Button HeightRequest="84"
                            Text="Take Picture"
                            x:Name="CameraButton"
                            Clicked="OnCameraClicked" 
                            FontSize="Medium"
                            WidthRequest="84"/>
        </StackLayout>
        

</ContentPage>
